#!/bin/sh

unmountusb() {
	[ -z "$drives" ] && exit
	chosen=$(echo "$drives" | dmenu -i -p "Unmount which drive?" | awk '{print $1}' | sed 's/\\/\\\\/g')
	[ -z "$chosen" ] && exit
	device="$(lsblk -nrpo "name,type,size,mountpoint" | grep "$chosen" | awk -F\  '{ print $1 }')"
	[ -L "$HOME"/Media ] && rm "$HOME"/Media
	udisksctl unmount -b "$device" && notify-send "ðŸ’» USB unmounting" "$chosen unmounted."
	}

unmountandroid() { \
	case "$(printf "Yes\\nNo" | dmenu -i -p "Unmount Android device?")" in
		Yes) fusermount -u "$HOME/MountAndroid" && rmdir "$HOME/MountAndroid" && notify-send "ðŸ¤– Android unmounting" "Device unmounted." ;;
		No) exit ;;
	esac
}

asktype() { \
	case "$(printf "USB\\nAndroid" | dmenu -i -p "Unmount a USB drive or Android device?")" in
		USB) unmountusb ;;
		Android) unmountandroid ;;
	esac
	}

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '$2=="part"&&$4!~/\/boot|\/home$|SWAP/&&length($4)>1{printf "%s (%s)\n",$4,$3}')

if [ -z "$HOME/MountAndroid" ]; then
	[ -z "$drives" ] && echo "No drives to unmount." &&  exit
	echo "Unmountable USB drive detected."
	unmountusb
else
	if [ -z "$drives" ]
	then
		echo "Unmountable Android device detected."
	       	unmountandroid
	else
		echo "Unmountable USB drive(s) and Android device(s) detected."
		asktype
	fi
fi
