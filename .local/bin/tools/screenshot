#!/bin/sh

DATE=`date +'%Y-%m-%d-%H:%M:%S'`; 

if [ "$1" == "-s" ]; then
	sleep 0.2; scrot -s /home/paolo/Pictures/screenshots/"$DATE".png; xclip -t image/png -selection clipboard /home/paolo/Pictures/screenshots/"$DATE".png
else
	scrot /home/paolo/Pictures/screenshots/"$DATE".png; xclip -t image/png -selection clipboard /home/paolo/Pictures/screenshots/"$DATE".png
fi
